{
  "name": "ctv-mvp",
  "private": true,
  "version": "2.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "npx npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && source .venv/bin/activate && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
